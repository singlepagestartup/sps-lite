{
  "$schema": "https://json-schema.org/schema",
  "$id": "Relation",
  "title": "",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "description": "Action to perform",
      "x-prompt": {
        "message": "Create will create a new relation between two models. Remove will remove a relation between two models.",
        "type": "list",
        "default": "create",
        "items": [
          {
            "value": "create"
          },
          {
            "value": "remove"
          }
        ]
      }
    },
    "left_model_name": {
      "type": "string",
      "description": "Model name, for example: page",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "module": {
      "type": "string",
      "description": "Module",
      "x-prompt": {
        "message": "Select module for creating model",
        "type": "list",
        "default": "website-builder",
        "items": [
          { "value": "billing" },
          { "value": "broadcast" },
          { "value": "crm" },
          { "value": "file-storage" },
          { "value": "host" },
          { "value": "notification" },
          { "value": "rbac" },
          { "value": "sps-third-parties" },
          { "value": "website-builder" },
          { "value": "startup" }
        ]
      }
    },
    "right_model_name": {
      "type": "string",
      "description": "Model name, for example: layout",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "left_model_is_external": {
      "type": "boolean",
      "description": "Model name, for example: layout",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "right_model_is_external": {
      "type": "boolean",
      "description": "Model name, for example: layout",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["action", "module", "left_model_name", "right_model_name"]
}
